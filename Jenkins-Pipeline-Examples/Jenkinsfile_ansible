pipeline {
    agent any
    stages {
        stage('Execute Ansible Playbook') {
            steps {
                git 'https://github.com/mmukul/simple-app-devopscicd-demo.git'
                ansiblePlaybook become: true, colorized: true, credentialsId: 'ansiblenode', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/etc/ansible/hosts', playbook: '/etc/ansible/ansible-playbook.yaml', vaultTmpPath: ''
            }
        }
    }
}