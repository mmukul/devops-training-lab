pipeline {
    agent any

    tools {
        maven "MAVEN_HOME"
    }

    stages {
        stage('Get Latest Code') {
			steps {
		        // Add steps to clone the repository
                echo 'Get Latest Code'
                git 'https://github.com/mmukul/simple-app-devopscicd-demo.git'
			}
		}

        stage('Clean the Workspace') {
            steps {
                echo 'Clean the Workspace'
                sh "mvn clean"
            }
        }

        // Compile
        stage('Compile') {
            steps {
                echo 'Compile'
                sh "mvn compile"
            }
        }

        stage('Test') {
            steps {
                echo 'Test'
                sh "mvn test"
				
            }
        }
    }
}